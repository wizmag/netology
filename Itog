--1. Выведите состав команды meteor.
select
    title,
    name
from teams ts
inner join players ps
on ts.id = team_id
where ts.id = 2
;

--2. Выведите имя и дату рождения самого молодого игрока.
select
    name,
    birth as age
from players
where birth = (select min(birth) from players)
group by
    name,
    birth
;

--3. Выведите имена игроков и количество голов, забивших наибольшее количество.
with m_g as (
select
  player_id,
  Count(event) as goal
from Events
where event = 'goal'
group by player_id
)
select
    name,
    goal
from m_g
inner join players ps
on m_g.player_id = ps.passport
where goal = (select max(goal) from m_g)
group by
 name,
 goal
;

--4. Сколько голов в среднем забили полевые игроки.
with m_g as (
select
  player_id,
  Count(event) as goal
from Events
where event = 'goal'
group by player_id
)
select
    position,
    avg(goal) as av_goal
from m_g
inner join players ps
on m_g.player_id = ps.passport
where position = 'defender'
    or position = 'forward'
group by
    position
;

--5. Сколько мячей забили команды.
select
  ts.title,
  count(*) as count_goals
from teams ts
  inner join
  (select
    ps.team_id
  from events ev
       inner join players ps
       on ps.passport = ev.player_id
  where event = 'goal'
  ) e
  on e.team_id = ts.id
group by
  ts.title
order by
   count_goals desc
;

--6. Кто из полевых игроков не забил голов.
select
  name
from players
where passport not in (select player_id from events where event = 'goal')
  and position <> 'goalkeeper'
;

--7. Какой матч был самый результативный?
select
	m.match_id,
    t1.title team_home,
    t2.title team_guest
from matches m
inner join teams t1
on m.team_home = t1.id
inner join teams t2
on m.team_guest = t2.id
where m.match_id = (
select
    match_id
from (
select
    match_id,
    count(event) as sum_goals
from events
where event = 'goal'
group by match_id
) z
where sum_goals = (select max(sum_goals) from (select
    match_id,
    count(event) as sum_goals
from events
where event = 'goal'
group by match_id ) x))
;


--8. Выведите имена игроков кто забил два мяч в одном матче.
select
   p.name
from events e
inner join players p
on e.player_id = p.passport
where event = 'goal'
group by
	p.name,
    e.match_id,
    e.player_id
having count(player_id) = 2
;

--9. В каких матчах было получено больше всего желтых карточек.
select
    m.match_id,
    t1.title team_home,
    t2.title team_guest
from matches m
inner join teams t1
on m.team_home = t1.id
inner join teams t2
on m.team_guest = t2.id
where m.match_id in (
with x as (select
    match_id,
    count(event) as qty
from events
where event = 'yellow card'
group by
    match_id
)
select match_id
from x
where qty = (select max(qty) from x))
order by match_id
;

--10. В каком матче был забит самый быстрый гол?

select
	m.match_id,
    t1.title team_home,
    t2.title team_guest
from matches m
inner join teams t1
on m.team_home = t1.id
inner join teams t2
on m.team_guest = t2.id
where m.match_id in
 (select
    match_id
 from  events e
 where e.time = (select min(time) from events)
)
;

